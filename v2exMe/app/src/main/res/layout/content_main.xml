<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/tapBackgroudColor"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/hotnews"
            android:textAlignment="center"
            android:textSize="17dp"
            android:text="@string/v_hot"
            android:gravity="center"
            android:onClick="tapHotNews"
            android:textColor="@color/selColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/v_new"
            android:layout_weight="1"
            android:id="@+id/fastnews"
            android:textAlignment="center"
            android:textSize="17dp"
            android:gravity="center"
            android:onClick="tapFastNews"
            android:textColor="@color/unSelColor"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/v_node"
            android:layout_weight="1"
            android:id="@+id/nodenews"
            android:textAlignment="center"
            android:textSize="17dp"
            android:gravity="center"
            android:onClick="tapNodeNews"
            android:textColor="@color/unSelColor"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
